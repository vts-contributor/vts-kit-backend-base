
---
apiVersion: v1
kind: Service
metadata:
  name: {{env.appName}}-svc
  labels:
    app: {{env.appName}}
  namespace: {{env.namespace}}
spec:
  type: NodePort
  ports:
    - port: {{env.port}}
      name: port3
      protocol: TCP
      targetPort: {{env.targetPort}}
      nodePort: {{env.nodePort}}
  selector:
    app: {{env.appName}}
---

apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{env.appName}}-deployment
  labels:
    app: {{env.appName}}
  namespace: {{env.namespace}}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{env.appName}}
  template:
    metadata:
      labels:
        app: {{env.appName}}
    spec:
      containers:
        - name: {{env.appName}}-container
          image: {{env.imageName}}:{{env.version}}
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: {{env.containerPort}}
      imagePullSecrets:
        - name: {{env.imagePullSecrets}}
